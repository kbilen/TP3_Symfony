{% extends 'base.html.twig' %}

{% block title %}Liste des Éditeurs{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h1 class="h3 mb-0">Liste des Éditeurs</h1>
            <a href="{{ path('app_editeur_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Ajouter un éditeur
            </a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Id</th>
                            <th>Nom</th>
                            <th>Pays</th>
                            <th>Site Web</th>
                            <th>Description</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for editeur in editeurs %}
                        <tr>
                            <td class="ps-4">{{ editeur.id }}</td>
                            <td class="fw-medium">{{ editeur.nom }}</td>
                            <td>{{ editeur.pays }}</td>
                            <td>
                                {% if editeur.siteWeb %}
                                    <a href="{{ editeur.siteWeb }}" target="_blank" class="text-decoration-none">
                                        <i class="bi bi-box-arrow-up-right"></i> Lien
                                    </a>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>{{ editeur.description|length > 50 ? editeur.description|slice(0, 50) ~ '...' : editeur.description }}</td>
                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_editeur_show', {'id': editeur.id}) }}" class="btn btn-sm btn-outline-info" title="Consulter">
                                        Consulter
                                    </a>
                                    <a href="{{ path('app_editeur_edit', {'id': editeur.id}) }}" class="btn btn-sm btn-outline-warning" title="Modifier">
                                        Modifier
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">Aucun éditeur trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
