{% extends 'base.html.twig' %}

{% block title %}Détails de l'Éditeur{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h1 class="h3 mb-0">Éditeur : {{ editeur.nom }}</h1>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th class="text-muted" style="width: 30%">Id</th>
                                <td>{{ editeur.id }}</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Nom</th>
                                <td class="fw-bold">{{ editeur.nom }}</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Pays</th>
                                <td>{{ editeur.pays }}</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Site Web</th>
                                <td>
                                    {% if editeur.siteWeb %}
                                        <a href="{{ editeur.siteWeb }}" target="_blank">{{ editeur.siteWeb }}</a>
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th class="text-muted">Description</th>
                                <td>{{ editeur.description }}</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Créé le</th>
                                <td>{{ editeur.createdAt ? editeur.createdAt|date('d/m/Y H:i') : '-' }}</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Mis à jour le</th>
                                <td>{{ editeur.updatedAt ? editeur.updatedAt|date('d/m/Y H:i') : '-' }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer bg-light d-flex justify-content-between align-items-center">
                    <a href="{{ path('app_editeur_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Retour à la liste
                    </a>
                    <div>
                        <a href="{{ path('app_editeur_edit', {'id': editeur.id}) }}" class="btn btn-warning me-2">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                        {{ include('editeur/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
