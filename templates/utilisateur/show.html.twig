{% extends 'base.html.twig' %}

{% block title %}Utilisateur
{% endblock %}

{% block body %}
	<h1>Utilisateur :
		{{ utilisateur.prenom }}
		{{ utilisateur.nom }}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ utilisateur.id }}</td>
			</tr>
			<tr>
				<th>Prénom</th>
				<td>{{ utilisateur.prenom }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ utilisateur.nom }}</td>
			</tr>
			<tr>
				<th>Pseudo</th>
				<td>{{ utilisateur.pseudo }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ utilisateur.mail }}</td>
			</tr>
			<tr>
				<th>Date de naissance</th>
				<td>{{ utilisateur.dateNaissance ? utilisateur.dateNaissance|date('d/m/Y') : '' }}</td>
			</tr>
			<tr>
				<th>Image de profil</th>
				<td>
					{% if utilisateur.imageProfil %}
						<img src="{{ utilisateur.imageProfil }}" alt="Profil" style="max-height: 100px;">
					{% else %}
						-
					{% endif %}
				</td>
			</tr>
			<tr>
				<th>Créé le</th>
				<td>{{ utilisateur.createdAt ? utilisateur.createdAt|date('d/m/Y H:i') : '' }}</td>
			</tr>
			<tr>
				<th>Mis à jour le</th>
				<td>{{ utilisateur.updatedAt ? utilisateur.updatedAt|date('d/m/Y H:i') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_utilisateur_index') }}">Retour à la liste</a>
	<a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}">Modifier</a>

	{{ include('utilisateur/_delete_form.html.twig') }}
{% endblock %}
