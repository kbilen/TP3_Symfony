{% extends 'base.html.twig' %}

{% block title %}Modifier le jeu dans la collection
{% endblock %}

{% block breadcrumb %}
	<nav aria-label="breadcrumb" class="mb-4">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{ path('app_home') }}">Accueil</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{ path('app_collection_index') }}">Collections</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{ path('app_collection_show', {'id': collect.utilisateur.id}) }}">{{ collect.utilisateur.pseudo }}</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">Modifier</li>
		</ol>
	</nav>
{% endblock %}

{% block body %}
	<div class="row justify-content-center row-full-height">
		<div class="col-md-8 col-full-height">
			<div class="card shadow-sm card-scrollable-content">
				<div class="card-header bg-white">
					<h1 class="h3 mb-0">
						<i class="bi bi-pencil text-warning"></i>
						Modifier le jeu dans la collection
					</h1>
				</div>
				<div class="card-body">
					{{ include('collection/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
				</div>
				<div class="card-footer bg-light d-flex justify-content-between align-items-center">
					<a href="{{ path('app_collection_show', {'id': collect.utilisateur.id}) }}" class="btn btn-secondary">
						<i class="bi bi-arrow-left"></i>
						Retour à la collection
					</a>
					{{ include('collection/_delete_form.html.twig') }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
