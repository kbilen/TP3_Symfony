{% extends 'base.html.twig' %}

{% block title %}Collections des Utilisateurs
{% endblock %}

{% block body %}
	<h1>Collections des Utilisateurs</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Utilisateur</th>
				<th>Nombre de jeux</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for utilisateur in utilisateurs %}
				<tr>
					<td>{{ utilisateur.prenom }}
						{{ utilisateur.nom }}
						({{ utilisateur.pseudo }})</td>
					<td>{{ utilisateur.collects|length }}</td>
					<td>
						<a href="{{ path('app_collection_show', {'id': utilisateur.id}) }}">Voir la collection</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Aucun utilisateur trouv√©</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
