{{ form_start(form) }}
{% if jeu_video is defined and jeu_video.imageUrl %}
	<div class="mb-3">
		<label class="form-label d-block">Image actuelle</label>
		<img src="{{ asset(jeu_video.imageUrl) }}" alt="Image actuelle" style="max-width: 200px; max-height: 200px; object-fit: contain; border-radius: 8px; border: 1px solid #dee2e6;">
	</div>
{% endif %}
{{ form_widget(form) }}
<div class="mt-4">
	<button class="btn btn-primary">{{ button_label|default('Sauvegarder') }}</button>
</div>
{{ form_end(form) }}
