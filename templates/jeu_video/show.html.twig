{% extends 'base.html.twig' %}

{% block title %}Détails du Jeu Vidéo{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h1 class="h3 mb-0">Jeu Vidéo : {{ jeu_video.titre }}</h1>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th class="text-muted" style="width: 30%">Id</th>
                                <td>{{ jeu_video.id }}</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Titre</th>
                                <td class="fw-bold">{{ jeu_video.titre }}</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Éditeur</th>
                                <td>{{ jeu_video.editeur.nom }}</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Genre</th>
                                <td>
                                    {% if jeu_video.genre %}
                                        <span class="badge bg-info text-dark">{{ jeu_video.genre.Nom }}</span>
                                    {% else %}
                                        <span class="text-muted">Non renseigné</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th class="text-muted">Développeur</th>
                                <td>{{ jeu_video.developpeur }}</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Date de Sortie</th>
                                <td>{{ jeu_video.dateSortie ? jeu_video.dateSortie|date('d/m/Y') : '-' }}</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Prix</th>
                                <td>{{ jeu_video.prix|number_format(2, ',', ' ') }} €</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Description</th>
                                <td>{{ jeu_video.description }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer bg-light d-flex justify-content-between align-items-center">
                    <a href="{{ path('app_jeu_video_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Retour à la liste
                    </a>
                    <div>
                        <a href="{{ path('app_jeu_video_edit', {'id': jeu_video.id}) }}" class="btn btn-warning me-2">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                        {{ include('jeu_video/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
