{% extends 'base.html.twig' %}

{% block title %}Genre
{% endblock %}

{% block body %}
	<h1>Genre</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ genre.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ genre.nom }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ genre.description }}</td>
			</tr>
			<tr>
				<th>Actif</th>
				<td>{{ genre.actif ? 'Oui' : 'Non' }}</td>
			</tr>
			<tr>
				<th>Créé le</th>
				<td>{{ genre.createdAt ? genre.createdAt|date('d/m/Y H:i') : '' }}</td>
			</tr>
			<tr>
				<th>Mis à jour le</th>
				<td>{{ genre.updatedAt ? genre.updatedAt|date('d/m/Y H:i') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_genre_index') }}">Retour à la liste</a>

	<a href="{{ path('app_genre_edit', {'id': genre.id}) }}">Modifier</a>

	{{ include('genre/_delete_form.html.twig') }}
{% endblock %}
