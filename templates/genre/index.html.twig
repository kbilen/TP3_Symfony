{% extends 'base.html.twig' %}

{% block title %}Liste des Genres{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h1 class="h3 mb-0">Liste des Genres</h1>
            <a href="{{ path('app_genre_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Ajouter un genre
            </a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Id</th>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Actif</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for genre in genres %}
                        <tr>
                            <td class="ps-4">{{ genre.id }}</td>
                            <td class="fw-medium">{{ genre.nom }}</td>
                            <td>{{ genre.description|length > 50 ? genre.description|slice(0, 50) ~ '...' : genre.description }}</td>
                            <td>
                                {% if genre.actif %}
                                    <span class="badge bg-success">Oui</span>
                                {% else %}
                                    <span class="badge bg-secondary">Non</span>
                                {% endif %}
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_genre_show', {'id': genre.id}) }}" class="btn btn-sm btn-outline-info" title="Consulter">
                                        Consulter
                                    </a>
                                    <a href="{{ path('app_genre_edit', {'id': genre.id}) }}" class="btn btn-sm btn-outline-warning" title="Modifier">
                                        Modifier
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-4 text-muted">Aucun genre trouv√©</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
