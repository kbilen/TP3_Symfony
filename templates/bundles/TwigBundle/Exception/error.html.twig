{% extends 'base.html.twig' %}
{% block title %}
	Erreur
	{{ status_code }}
	- Une erreur est survenue
{% endblock %}
{% block breadcrumb %}{% endblock %}
{% block menu %}{% endblock %}

{% block body %}
	<div class="container py-5">
		<div class="row justify-content-center">
			<div class="col-md-8 text-center">
				<div class="card shadow-lg border-0">
					<div class="card-body py-5">
						<div class="mb-4">
							<i class="bi bi-bug text-danger" style="font-size: 5rem;"></i>
						</div>

						<h1 class="display-4 mb-3">Une erreur est survenue</h1>

						<p class="errorCode fs-4 text-danger fw-bold mb-3">
							Error
							{{ status_code }}
							{{ status_text }}
						</p>

						<p class="detail text-muted mb-4">
							Nous sommes désolés, une erreur inattendue s'est produite. 
														                        Veuillez réessayer plus tard.
						</p>

						<a class="aBtn btn btn-primary btn-lg" href="{{ path('app_home') }}">
							<i class="bi bi-house-door me-2"></i>Retourner à l'accueil
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
